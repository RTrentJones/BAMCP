# ============================================================================
# BAMCP Development Dockerfile
# Single-stage: includes test tooling, Playwright browsers, dev dependencies.
# ============================================================================

FROM python:3.12-slim

# Build deps for pysam + Playwright system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
        gcc \
        libc6-dev \
        zlib1g-dev \
        libbz2-dev \
        liblzma-dev \
        libcurl4-openssl-dev \
        libssl-dev \
        make \
        git \
        # Playwright Chromium dependencies
        libnss3 \
        libnspr4 \
        libdbus-1-3 \
        libatk1.0-0 \
        libatk-bridge2.0-0 \
        libcups2 \
        libdrm2 \
        libxkbcommon0 \
        libxcomposite1 \
        libxdamage1 \
        libxfixes3 \
        libxrandr2 \
        libgbm1 \
        libpango-1.0-0 \
        libcairo2 \
        libasound2 \
        libatspi2.0-0 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install dependencies first (layer caching)
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e ".[dev]"

# Install Playwright browsers
RUN playwright install chromium

# Copy source and tests
COPY src/ src/
COPY tests/ tests/

# Generate test fixtures if not present
RUN python tests/create_fixtures.py

# Default env
ENV BAMCP_REFERENCE=""
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

VOLUME ["/data"]

# Default: run all tests
CMD ["python", "-m", "pytest", "tests/", "--ignore=tests/e2e", "-v", "--cov=bamcp", "--cov-report=term-missing"]
